generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShoppingItem {
  id        String   @id @default(uuid())
  userId    String
  name      String
  category  String
  checked   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model BillsItem {
  id        String   @id @default(uuid())
  userId    String
  name      String
  amount    Float
  dueDate   DateTime
  category  String
  checked   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ChoresItem {
  id          String   @id @default(uuid())
  userId      String
  name        String
  assignee    String
  description String
  checked     Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model MaintenanceItem {
  id          String   @id @default(uuid())
  userId      String
  title       String
  category    String
  description String
  checked     Boolean  @default(false)
  createdAt   DateTime @default(now())
}